@using BusnLogicLaag
@model List<Onderdeel>

@{
    ViewData["Title"] = "OnderdelenTonenGebr";
}

<h1>Mijn Onderdelen</h1>

<br />

@if(TempData["AllertMessage"] != null)
{
    <div class="alert alert-danger">
    <strong>Oops!</strong> @TempData["AllertMessage"]
    </div>
}

<p>
<a asp-action="OnderdeelAanmaken">Nieuw</a>
</p>
<div class="row">
<div class="col">
<div class="rightside d-flex justify-content-center align-items-center" style="margin-top:40px">
<table class="table">
  <thead>
    <tr>
     <th>
       Onderdeel
     </th>
     <th>
       Categorie
     </th>
     <th>
       Prijs
     </th>
     <th>
       Titel
     </th>
    <th></th>
   </tr>
  </thead>
 <tbody>

@foreach (Onderdeel item in Model) {
  <tr>
   <td>
    <img src="~/Images/@item.FileAdress" class="rounded" width="70" height="70" asp-append-version="true" />
   </td>
   <td>
    @Html.DisplayFor(modelItem => item.DeCategory)
   </td>
   <td>
    @Html.DisplayFor(modelItem => item.Prijs)
   </td>
   <td>
    @Html.DisplayFor(modelItem => item.Titel)
   </td>
  </tr>
}
 </tbody>
</table>

